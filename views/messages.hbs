<ol>
  {{#each allMessages}}
    <li>{{ sender }} - {{receiver}} : {{body}}</li>
  {{/each}}
</ol>

<form method="POST" action="">
  from: <input type="text" name="sender" value="Ashe">
  to: <input type="text" name="receiver" value="Tryndamere">
  message: <input type="text" name="messageBody" value="Dinner plans?">
  message type: <select name="messageType" size="3">
    <option value="text">Text</option>
    <option value="imageLink">Image</option>
    <option value="videoLink">Video</option>
  </select>
  <input type="submit" value="Send">
</form>











